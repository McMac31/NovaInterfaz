<Window x:Class="InterfazNova.TotalFacturado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazNova"
        mc:Ignorable="d"
        Title="TotalFacturado" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Total Facturado:" Grid.Row="0" HorizontalContentAlignment="Center" FontSize="70" FontFamily="Arial Rounded MT Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name="txtFacturado" Content="0" Grid.Row="1" FontSize="70"  FontFamily="Arial Rounded MT Bold" Margin="0,88,0,-89" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
