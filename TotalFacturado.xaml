<Window x:Class="InterfazNova.TotalFacturado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Total Facturado" Height="450" Width="800" ResizeMode="NoResize"
        Background="#FFFDFDFD" WindowStartupLocation="CenterScreen">

    <Border CornerRadius="15" BorderBrush="#FFB401B5" BorderThickness="2" Padding="20" Margin="15" Background="#FFFFFFFF" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Total Facturado"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       FontFamily="Arial Rounded MT Bold"
                       FontSize="36"
                       Foreground="#FF4B0082"
                       Margin="0,10,0,20"
                       TextAlignment="Center"/>

            <!-- Total -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <Label x:Name="txtFacturado"
                           Content="0 €"
                           FontFamily="Arial Rounded MT Bold"
                           FontSize="72"
                           HorizontalAlignment="Center"
                           Foreground="#FF333333"
                           Margin="0,10,0,0"/>

                <TextBlock Text="(Total acumulado)"
                           FontFamily="Arial Rounded MT Bold"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Foreground="#99000000"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
