<Window x:Class="InterfazNova.ventanaClientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clientes Destacados" Height="480" Width="820"
       WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FFFDFDFE">
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" Color="#22000000" BlurRadius="8" ShadowDepth="2"/>

        <Style x:Key="bordeCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFB401B5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>
        
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FFFAF0F6"/>
            <Setter Property="FontFamily" Value="Arial Rounded MT Bold"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Clientes Destacados" FontFamily="Arial Rounded MT Bold" FontSize="28" HorizontalAlignment="Center" Grid.Row="0" Margin="0,6"/>

        <Border Grid.Row="2" Style="{StaticResource bordeCard}">
            <DataGrid x:Name="TablaClientes"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#FFF9F9FB"
                      RowBackground="White"
                      HeadersVisibility="Column"
                      FontFamily="Arial Rounded MT Bold"
                      FontSize="14"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="90"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Correo" Binding="{Binding Email}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
