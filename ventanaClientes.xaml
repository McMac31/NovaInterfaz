<Window x:Class="InterfazNova.ventanaClientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazNova"
        mc:Ignorable="d"
        Title="ventanaClientes" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Clientes Destacados" HorizontalContentAlignment="Center" Grid.Row="0" FontFamily="Arial Rounded MT Bold" FontSize="33"/>
        <Border BorderBrush="#FFB401B5" BorderThickness="1" Grid.Row="1" Margin="0,10,0,0">
            <DataGrid x:Name="TablaClientes" Background="Transparent" IsReadOnly="True" CanUserAddRows="False" AutoGenerateColumns="False" BorderBrush="Black" Margin="0,-1,0,-373" HorizontalAlignment="Center">
                <DataGrid.Columns>
                    <DataGridTextColumn FontFamily="Arial Rounded MT Bold" Header="Cliente" Width="*"/>
                    <DataGridTextColumn FontFamily="Arial Rounded MT Bold" Header="Correo" Width="*"/>
                    
                </DataGrid.Columns>
            </DataGrid>

        </Border>
    </Grid>
</Window>
