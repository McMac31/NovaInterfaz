<Window x:Class="InterfazNova.PedidosPendientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pedidos pendientes" Height="480" Width="820"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FFFDFDFE">
    <Window.Resources>
        <DropShadowEffect x:Key="sombraCard" Color="#22000000" BlurRadius="8" ShadowDepth="2"/>
    <!--Estilos-->
        <Style x:Key="bordeCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFB401B5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource sombraCard}"/>
        </Style>

        <Style x:Key="Botones" TargetType="Button">
            <Setter Property="Background" Value="#FFB401B5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Arial Rounded MT Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FFFAF0F6"/>
            <Setter Property="FontFamily" Value="Arial Rounded MT Bold"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Pedidos pendientes" FontFamily="Arial Rounded MT Bold" FontSize="28" HorizontalAlignment="Center" Grid.Row="0" Margin="0,4"/>

        <!-- Filtro -->
        <Border Grid.Row="1" Style="{StaticResource bordeCard}" HorizontalAlignment="Center" Margin="0,10,0,10" Width="776">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Filtrar:" FontFamily="Arial Rounded MT Bold" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBlock Text="De" VerticalAlignment="Center" Margin="4,0"/>
                <DatePicker x:Name="FechaInicio" SelectedDateFormat="Short" BorderBrush="#FFB401B5" Width="130" Margin="6,0"/>
                <TextBlock Text="Hasta" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <DatePicker x:Name="FechaFin" SelectedDateFormat="Short" BorderBrush="#FFB401B5" Width="130" Margin="6,0"/>
                <Button Content="Filtrar" Click="FiltrarPorFecha_Click" Style="{StaticResource Botones}" Margin="8,0"/>
                <Button Content="Limpiar" Click="LimpiarFiltro_Click" Style="{StaticResource Botones}" Margin="8,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Tabla -->
        <Border Grid.Row="2" Style="{StaticResource bordeCard}">
            <DataGrid x:Name="TablaClientes"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#FFF9F9FB"
                      RowBackground="White"
                      HeadersVisibility="Column"
                      FontFamily="Arial Rounded MT Bold"
                      FontSize="14"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Pedido" Binding="{Binding Pedido}" Width="2*"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="2*"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat={}{0:C}}" Width="*"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
