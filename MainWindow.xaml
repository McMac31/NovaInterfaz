<Window x:Class="InterfazNova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazNova"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">

    <Grid Margin="0,-12,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="Titulo" Grid.Row="0" Content="TechSolutions" HorizontalContentAlignment="Center"  FontSize="40" DockPanel.Dock="Left" Width="264" Height="63" Background="{x:Null}" FontFamily="Calisto MT" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Height="139" Margin="25,0,26,0">
            <Border x:Name="CuadroVentas" Background="Transparent" HorizontalAlignment="Center" BorderBrush="#FFB401B5" BorderThickness="2" MouseDown="AbrirCuadroVentas" Margin="10
                    " Width="162" Height="120">
                <TextBlock Text="Nº ventas" TextAlignment="Center" TextWrapping="Wrap" 
                   VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial Rounded MT Bold" FontSize="14" Margin="0,8,0,0"/>
            </Border>

            <Border x:Name="CuadroTotalFacturado" Background="Transparent" BorderBrush="#FFB401B5" HorizontalAlignment="Center" BorderThickness="2" Margin="10" Width="162" Height="120" MouseDown="AbrirTotal">
                <TextBlock Text="Total facturado" TextAlignment="Center" TextWrapping="Wrap" 
                   VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial Rounded MT Bold" FontSize="14" Margin="0,8,0,0"/>
            </Border>

            <Border x:Name="CuadroPedidosPendientes" Background="Transparent" BorderBrush="#FFB401B5" HorizontalAlignment="Center" BorderThickness="2" Margin="10" Width="162" Height="120" MouseDown="AbrirPedidosPen">
                <TextBlock Text="Pedidos pendientes de envio" TextAlignment="Center" TextWrapping="Wrap" 
                   VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial Rounded MT Bold" FontSize="14" Margin="0,8,0,0"/>
            </Border>

            <Border x:Name="CuadroProductoStockBajo" Background="Transparent" BorderBrush="#FFB401B5" HorizontalAlignment="Center" BorderThickness="2" Margin="10" Width="162" Height="120" MouseDown="AbrirStockBajo">
                <TextBlock Text="Producto con Bajo stock" TextAlignment="Center" TextWrapping="Wrap" 
                   VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial Rounded MT Bold" FontSize="14" Margin="0,8,0,0"/>
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="766" Grid.Row="2">
            <Label Content="Filtrar:"  VerticalAlignment="Center" Height="30" Width="70" Background="{x:Null}" FontFamily="Arial Rounded MT Bold" FontSize="16"/>
            <Label Content="De" Height="30" VerticalAlignment="Center" Width="38" Background="{x:Null}" FontFamily="Arial Rounded MT Bold" FontSize="16"/>
            <DatePicker x:Name="FechaInicio"  SelectedDateFormat="Long" BorderBrush="#FFB401B5" Background="{x:Null}" />
            <Label Content="Hasta" HorizontalAlignment="Left" VerticalAlignment="Center" Height="31" Width="70" Background="{x:Null}" FontFamily="Arial Rounded MT Bold" FontSize="16" RenderTransformOrigin="0.652,0.55"/>
            <DatePicker x:Name="FechaFin" SelectedDateFormat="Long" BorderBrush="#FFB401B5" Background="{x:Null}" />
            <Button Content="Clientes destacados" Width="163" HorizontalContentAlignment="Center"  Click="Button_Click" Margin="50,0,0,0"/>

        </StackPanel>
        <Border BorderBrush="#FFB401B5" BorderThickness="1" Grid.Row="3" Margin="0,10,0,0">
            <DataGrid x:Name="TablaClientes" Background="Transparent" IsReadOnly="True" CanUserAddRows="False" AutoGenerateColumns="False" BorderBrush="Black" Margin="0,-1,0,1" HorizontalAlignment="Center" >
                <DataGrid.Columns>
                    <DataGridTextColumn FontFamily="Arial Rounded MT Bold" Header="Pedido" Width="*"/>
                    <DataGridTextColumn FontFamily="Arial Rounded MT Bold" Header="Fecha" Width="*"/>
                    <DataGridTextColumn FontFamily="Arial Rounded MT Bold" Header="Cliente" Width="*"/>
                    <DataGridTextColumn FontFamily="Arial Rounded MT Bold" Header="Total" Width="*"/>
                    <DataGridTextColumn FontFamily="Arial Rounded MT Bold" Header="Estado" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

        </Border>

    </Grid>
</Window>
