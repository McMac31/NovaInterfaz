<Window x:Class="InterfazNova.ProductosBajoStock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Productos Bajo Stock" Height="480" Width="820" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFDFE">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Productos Bajo Stock" FontSize="32" FontFamily="Arial Rounded MT Bold" Foreground="#222222" HorizontalAlignment="Center" Grid.Row="0" Margin="0,8,0,8"/>

        <Border Grid.Row="1" BorderThickness="1" BorderBrush="#FFB401B5" CornerRadius="8" Background="White" Padding="4" SnapsToDevicePixels="True">
            <DataGrid x:Name="TablaClientes"
                      Background="Transparent"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      AutoGenerateColumns="False"
                      FontFamily="Arial Rounded MT Bold"
                      FontSize="16"
                      HorizontalAlignment="Stretch"
                      RowHeight="32"
                      AlternatingRowBackground="#FFF9F9FB"
                      GridLinesVisibility="Horizontal"
                      BorderBrush="Transparent"
                      Margin="0">

                <!-- Celdas -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="6,4"/>
                    </Style>
                </DataGrid.Resources>

                <!-- Semaforo Nivel de stock -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding NivelStock}" Value="Low">
                                <Setter Property="Background" Value="#FFF34646"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding NivelStock}" Value="Medium">
                                <Setter Property="Background" Value="#FFEDD35B"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding NivelStock}" Value="High">
                                <Setter Property="Background" Value="#FF60F360"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="100"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
